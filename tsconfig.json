{
  "include": ["db/**/*", "server/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "types": ["node", "node-schedule"],
    "paths": {
      "@db": ["./db/index.ts"],
      "@db/*": ["./db/*"]
    }
  }
}
